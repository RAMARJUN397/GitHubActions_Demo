name: CI - Maven Project
on: [workflow_dispatch]
  # push:
  #   branches: [main]
# on.push.branches: [main]

jobs:
  clean:
    runs-on: ubuntu-latest
    steps:
      - name: checkout
        uses: actions/checkout@v4
      - name: setup java
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin' # See 'Supported distributions' for available options
          java-version: '21'
      - name: clean maven project
        run: mvn clean
  compile:
    runs-on: windows-latest
    needs: clean
    steps:
      - name: checkout
        uses: actions/checkout@v4
      - name: setup java
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin' # See 'Supported distributions' for available options
          java-version: '21'
      - name: compile maven project
        run: mvn clean compile
  unit-testing:
    runs-on: windows-latest
    needs: compile
    steps:
      - name: checkout
        uses: actions/checkout@v4
      - name: setup java
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin' # See 'Supported distributions' for available options
          java-version: '21'
      - name: test maven project
        run: mvn test
  code-coverage:
    runs-on: ubuntu-latest
    needs: unit-testing
    steps:
      - name: checkout
        uses: actions/checkout@v4
      - name: setup java
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin' # See 'Supported distributions' for available options
          java-version: '21'
      - name: coverage report maven project
        run: mvn test jacoco:report
  build:
    runs-on: ubuntu-latest
    needs: code-coverage
    steps:
      - name: checkout
        uses: actions/checkout@v4
      - name: setup java
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin' # See 'Supported distributions' for available options
          java-version: '21'
      - name: build maven project
        run: mvn clean compile package
      - name: display the fies
        run: |
          ls
  
  docker-image-build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
    - name: Build the Docker image
      run: docker build . --file Dockerfile --tag gh-march-batch:$(date +%s)
